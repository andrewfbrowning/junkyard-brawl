{
  "name": "node-junkyard",
  "version": "0.1.0",
  "description": "NodeJS implementation of the card game Junkyard Brawl",
  "main": "index.js",
  "engines": {
    "node": ">=6.5"
  },
  "scripts": {
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "eslint": "eslint .",
    "eslint:fix": "npm run eslint -- --fix",
    "nyc": "nyc ava '**/*.spec.js'",
    "test": "npm run eslint && npm run nyc",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gfax/node-junkyard.git"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ],
    "report-dir": "./coverage",
    "reporter": [
      "text",
      "html"
    ]
  },
  "keywords": [
    "brawl",
    "cards",
    "card-game",
    "game",
    "junkyard",
    "junkyard-brawl"
  ],
  "author": "Jay Thomas <jay@gfax.ch>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/gfax/node-junkyard/issues"
  },
  "homepage": "https://github.com/gfax/node-junkyard#readme",
  "dependencies": {
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.6.1",
    "eslint-plugin-unicorn": "^2.1.2",
    "nyc": "^11.2.1",
    "sinon": "^3.2.1"
  }
}
